@model IEnumerable<Speed.Models.Inquiry>

@{
    ViewData["Title"] = "Inquiries";
}

<div class="container">
    <h1>Incoming Inquiries</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Subject</th>
                <th>Email</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.IsRead ? "" : "table-warning")">
                    <td>@item.CreatedAt.ToShortDateString()</td>
                    <td>@item.Subject</td>
                    <td>@item.Email</td>
                    <td>@(item.IsRead ? "Read" : "New")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
     <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to Admin Dashboard</a>
</div>
