@model IEnumerable<Speed.Models.PageContent>

@{
    ViewData["Title"] = "Content Management";
}

<div class="container">
    <h1>Content Management</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Content</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Page</th>
                <th>Section Key</th>
                <th>Content Preview</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PageName</td>
                    <td>@item.SectionKey</td>
                    <td>@(item.Content.Length > 50 ? item.Content.Substring(0, 50) + "..." : item.Content)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
</div>
